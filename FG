    function updateBalanceDisplay() {
      document.getElementById('balance').textContent = balance;
    }

    function showGameUI() {
      document.querySelectorAll('.game-ui').forEach(e => e.style.display = 'block');
      document.getElementById('auth').style.display = 'none';
    }

    function register() {
      const user = document.getElementById('username').value;
      const pass = document.getElementById('password').value;
      if (!user || !pass) {
        document.getElementById('authMsg').textContent = 'тЪая╕П ржЗржЙржЬрж╛рж░ржирзЗржо ржПржмржВ ржкрж╛рж╕ржУрзЯрж╛рж░рзНржб ржжрж┐ржи!';
        return;
      }
      if (localStorage.getItem('user_' + user)) {
        document.getElementById('authMsg').textContent = 'тЭМ ржПржЗ ржЗржЙржЬрж╛рж░ржирзЗржо ржЖржЧрзЗ ржерзЗржХрзЗржЗ ржЖржЫрзЗ!';
        return;
      }
      const userData = { password: pass, balance: 120 }; // 100 + 20 = 120 ржЯрж╛ржХрж╛ ржмрзЛржирж╛рж╕ рж╕рж╣
      localStorage.setItem('user_' + user, JSON.stringify(userData));
      document.getElementById('authMsg').textContent = 'тЬЕ рж░рзЗржЬрж┐рж╕рзНржЯрзНрж░рзЗрж╢ржи рж╕ржлрж▓! ржПржЦржи рж▓ржЧржЗржи ржХрж░рзБржиред';
    }

    function login() {
      const user = document.getElementById('username').value;
      const pass = document.getElementById('password').value;
      const stored = localStorage.getItem('user_' + user);
      if (!stored) {
        document.getElementById('authMsg').textContent = 'тЭМ ржЗржЙржЬрж╛рж░ ржЦрзБржБржЬрзЗ ржкрж╛ржУрзЯрж╛ ржпрж╛рзЯржирж┐!';
        return;
      }
      const userData = JSON.parse(stored);
      if (userData.password !== pass) {
        document.getElementById('authMsg').textContent = 'тЭМ ржкрж╛рж╕ржУрзЯрж╛рж░рзНржб ржнрзБрж▓!';
        return;
      }
      currentUser = user;
      balance = userData.balance;
      updateBalanceDisplay();
      showGameUI();
    }

    function spin() {
      const result = document.getElementById('result');
      if (balance < betAmount) {
        result.textContent = 'тЭМ ржЖржкржирж╛рж░ ржХрж╛ржЫрзЗ ржкрж░рзНржпрж╛ржкрзНржд ржЯрж╛ржХрж╛ ржирзЗржЗ!';
        return;
      }

      balance -= betAmount;

      const s1 = symbols[Math.floor(Math.random() * symbols.length)];
      const s2 = symbols[Math.floor(Math.random() * symbols.length)];
      const s3 = symbols[Math.floor(Math.random() * symbols.length)];

      document.getElementById('slot1').textContent = s1;
      document.getElementById('slot2').textContent = s2;
      document.getElementById('slot3').textContent = s3;

      let winAmount = 0;

      // If all symbols match, multiply by the bet amount (15x here)
      if (s1 === s2 && s2 === s3) {
        winAmount = symbolValues[s1] * 15;
        result.textContent = `ЁЯОЙ ржЖржкржирж┐ ржЬрж┐рждрзЗржЫрзЗржи! рждрж┐ржиржЯрж┐ ржорж┐рж▓рзЗржЫрзЗ! +${winAmount} ржЯрж╛ржХрж╛`;
      } else if (s1 === s2 || s2 === s3 || s1 === s3) {
        winAmount = symbolValues[s1] || symbolValues[s2] || symbolValues[s3];
        result.textContent = `ЁЯШК ржжрзБржЗржЯрж┐ ржорж┐рж▓рзЗржЫрзЗ! +${winAmount} ржЯрж╛ржХрж╛`;
      } else {
        result.textContent = 'ЁЯШв ржХрж┐ржЫрзБржЗ ржорзЗрж▓рзЗржирж┐ред ржЖржмрж╛рж░ ржЪрзЗрж╖рзНржЯрж╛ ржХрж░рзБржи!';
      }

      balance += winAmount;
      updateBalanceDisplay();
      saveUserData();
    }

