  <script>
    const symbols = ['ЁЯТО', 'ЁЯФ╖', 'ЁЯТа', 'ЁЯФ╕', 'ЁЯФ╣'];
    const symbolValues = {
      'ЁЯТОЁЯТОЁЯТО': 60,
